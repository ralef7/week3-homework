<div class="place">
	<h2><%= @place.title %></h2> 

	<p>
		<span>Price: <%= number_to_currency(@place.admission_price/100) %></span>	
	</p>
	
	<p>
		<%= @place.description %>
	</p>

	<%= image_tag @place.photo_url, class: 'place-image' %>

	<p>
		<%= link_to "EDIT", "/places/#{@place.id}/edit" %>
	</p>
</div>